{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ClipsManifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "units",
    "clips"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1
    },
    "units": {
      "type": "string",
      "enum": [
        "ms"
      ]
    },
    "run_id": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "description": "ISO8601 timestamp"
    },
    "source_media": {
      "type": "string"
    },
    "naming_policy": {
      "type": "string"
    },
    "clips": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "clip_id",
          "start_ms",
          "end_ms",
          "output"
        ],
        "properties": {
          "clip_id": {
            "type": "string"
          },
          "rank": {
            "type": "integer",
            "minimum": 1
          },
          "score": {
            "type": "number"
          },
          "start_ms": {
            "type": "integer",
            "minimum": 0
          },
          "end_ms": {
            "type": "integer",
            "minimum": 0
          },
          "duration_ms": {
            "type": "integer",
            "minimum": 0,
            "description": "剪辑时长，推荐 240000-300000ms"
          },
          "label": {
            "type": "string",
            "description": "高光标签（来源于 reason_tags 或摘要）"
          },
          "output": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "video"
            ],
            "properties": {
              "video": {
                "type": "string"
              },
              "subtitle": {
                "type": "string"
              },
              "thumbnail": {
                "type": "string"
              }
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "ok",
              "failed"
            ]
          },
          "error": {
            "type": "object"
          },
          "meta": {
            "type": "object"
          }
        }
      }
    }
  }
}
